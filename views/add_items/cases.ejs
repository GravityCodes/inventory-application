<head>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <form action="/category/add/cases" method="post">
    <h1 style="margin: 0 auto;">Add New Case</h1>
    <div class="form-field">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" maxlength="255" required>
    </div>
    <div class="form-field">
        <label for="color">Color</label>
        <input type="text" name="color" id="color" maxlength="20" required>
    </div>
    <div class="form-field">
      <label for="type">Type</label>
      <input type="text" name="type" id="type" maxlength="255" required>
    </div>
    <div class="form-field">
      <label for="series">Series</label>
      <input type="text" name="series" id="series" maxlength="255" required>
    </div>
    <div class="form-field">
      <label for="price">Price</label>
      <input type="number" name="price" id="price" required >
    </div>
    <button type="submit">Add</button>
  </form>
  <div class="cancel-wrapper">
    <a href="/category/cases">Cancel</a>
  </div>
</body>