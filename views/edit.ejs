<head>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <form action=<%= `/category/edit/${table}` %> method="POST">
    <h1 style="margin: 0 auto;">Edit Item</h1>
          <input type="hidden" name="table" id="table" value="<%= table %>">
    <% for( const [key, object] of Object.entries(product)) { %>
      <% if (key == "id") { %>
          <input type="hidden" id="<%= key %>" name="<%= key %>" value="<%= object %>">
          <% continue; %>
      <% } %>
      <div class="form-field">
        <label for=<%= key %>><%= key.charAt(0).toUpperCase() + key.slice(1) %></label>
        <input type=<%= typeof object == "string" ? "text" : "number"  %> value="<%= object %>" name="<%= key  %>" id="<%= key %>">
      </div>
    <% }; %>
      
    <button type="submit" >Update</button>
  
  </form>
  <div class="cancel-wrapper">
    <a href="<%= `/category/${table}`%>" class="cancel" >Cancel</a>
  </div>
</body>
<%- include("partials/footer.ejs")%>